// Prisma Schema
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Totp {
  hash      String @unique
  attempts  Int
  active    Boolean
  expiresAt DateTime

  @@index([expiresAt])
}

model User {
  id    String @unique @default(uuid())
  email String @unique

  createdAt DateTime @default(now())
}
